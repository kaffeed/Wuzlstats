@model Wuzlstats.ViewModels.Player.IndexViewModel.PlayerStatistics

<div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full">
        <tbody class="divide-y divide-gray-200">
            <tr>
                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 bg-gray-50"># 1 vs. 1 games:</th>
                <td class="px-4 py-3 text-right text-sm text-gray-900">@Model.SingleGames</td>
            </tr>
            <tr>
                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 bg-gray-50"># 2 vs. 2 games:</th>
                <td class="px-4 py-3 text-right text-sm text-gray-900">@Model.TeamGames</td>
            </tr>
            <tr>
                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 bg-gray-50"># wins:</th>
                <td class="px-4 py-3 text-right text-sm">
                    <span class="team-red font-bold">@Model.RedWins</span> :
                    <span class="team-blue font-bold">@Model.BlueWins</span>
                </td>
            </tr>
            <tr>
                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 bg-gray-50"># losses:</th>
                <td class="px-4 py-3 text-right text-sm">
                    <span class="team-red font-bold">@Model.RedLosses</span> :
                    <span class="team-blue font-bold">@Model.BlueLosses</span>
                </td>
            </tr>
            <tr>
                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 bg-gray-50">Favorite position:</th>
                <td class="px-4 py-3 text-right text-sm text-gray-900">@Model.FavoritePosition (@Model.FavoritePositionGames @(Model.FavoritePositionGames == 1 ? "game" : "games"))</td>
            </tr>
            <tr>
                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 bg-gray-50">Favorite teammate:</th>
                <td class="px-4 py-3 text-right text-sm text-gray-900">@Model.PlayedMostGamesWith (@Model.PlayedMostGamesWithCount @(Model.PlayedMostGamesWithCount == 1 ? "game" : "games"))</td>
            </tr>
            <tr>
                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 bg-gray-50">Lousiest opponent:</th>
                <td class="px-4 py-3 text-right text-sm text-gray-900">@Model.WonMostGamesAgainst (@Model.WonMostGamesAgainstCount @(Model.WonMostGamesAgainstCount == 1 ? "game" : "games"))</td>
            </tr>
            <tr>
                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 bg-gray-50">Arch enemy:</th>
                <td class="px-4 py-3 text-right text-sm text-gray-900">@Model.LostMostGamesAgainst (@Model.LostMostGamesAgainstCount @(Model.LostMostGamesAgainstCount == 1 ? "game" : "games"))</td>
            </tr>
            <tr>
                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 bg-gray-50"># goals scored:</th>
                <td class="px-4 py-3 text-right text-sm text-gray-900">@Model.GoalsScored.ToString("N0")</td>
            </tr>
            <tr>
                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 bg-gray-50"># goals taken:</th>
                <td class="px-4 py-3 text-right text-sm text-gray-900">@Model.GoalsTaken.ToString("N0")</td>
            </tr>
            <tr>
                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 bg-gray-50">First game played:</th>
                <td class="px-4 py-3 text-right text-sm text-gray-900">@Model.FirstGameDate</td>
            </tr>
            <tr>
                <th class="px-4 py-3 text-left text-sm font-medium text-gray-700 bg-gray-50">Last game played:</th>
                <td class="px-4 py-3 text-right text-sm text-gray-900">@Model.LastGameDate</td>
            </tr>
        </tbody>
    </table>
</div>
