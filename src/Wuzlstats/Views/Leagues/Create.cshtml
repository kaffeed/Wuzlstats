<h1 class="text-3xl font-bold mb-4">Create a new league</h1>
<hr class="mb-6 border-gray-200"/>

@if (!ViewContext.ModelState.IsValid)
{
    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6">
        <div class="text-red-700">
            @Html.ValidationSummary()
        </div>
    </div>
}

<form method="POST" class="max-w-lg">
    <div class="mb-6">
        <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Choose a name for the new league:</label>
        <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" id="name" placeholder="League name" name="name" required>
    </div>

    <button type="submit" class="px-6 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">Next</button>
</form>
