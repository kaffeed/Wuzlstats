@model Wuzlstats.ViewModels.Teams.IndexViewModel

@if (Model.Recent)
{
    <p class="text-sm text-gray-600 mb-4">
        These are the teams of the last @Model.Days days. All of them.<br />This is pretty sweet, but it gets better: There's also
        <a href="@Url.Action("Index", "Teams", new { sort = Model.ActiveFilter, recent = false })" class="text-blue-600 hover:text-blue-800 underline">this very same statistic, but for all of the time</a>. All of it. Holy crap!
    </p>
}
else
{
    <p class="text-sm text-gray-600 mb-4">
        These are all the teams. Ever.<br />No one will be forgotten. Shame and fame will last till the very end of days, or at least until a database crash with no backups. <br />
        There's the same statistic, <a href="@Url.Action("Index", "Teams", new { sort = Model.ActiveFilter, recent = true })" class="text-blue-600 hover:text-blue-800 underline">but only for the last @Model.Days days</a>, too.
    </p>
}

<div class="mb-6">
    <span class="text-sm font-medium text-gray-700 mr-2">Order By</span>
    <div class="inline-flex rounded-md shadow-sm" role="group">
        <a href="@Url.Action("Index", "Teams", new { recent = Model.Recent })" class="px-4 py-2 text-sm font-medium @(string.IsNullOrEmpty(Model.ActiveFilter) ? "bg-blue-600 text-white" : "bg-white text-gray-700 hover:bg-gray-50") border border-gray-300 rounded-l-lg transition-colors">Last played</a>
        <a href="@Url.Action("Index", "Teams", new { sort = "best", recent = Model.Recent })" class="px-4 py-2 text-sm font-medium @(Model.ActiveFilter == "best" ? "bg-blue-600 text-white" : "bg-white text-gray-700 hover:bg-gray-50") border-t border-b border-gray-300 transition-colors">Best</a>
        <a href="@Url.Action("Index", "Teams", new { sort = "worst", recent = Model.Recent })" class="px-4 py-2 text-sm font-medium @(Model.ActiveFilter == "worst" ? "bg-blue-600 text-white" : "bg-white text-gray-700 hover:bg-gray-50") border-t border-b border-gray-300 transition-colors">Worst</a>
        <a href="@Url.Action("Index", "Teams", new { sort = "activity", recent = Model.Recent })" class="px-4 py-2 text-sm font-medium @(Model.ActiveFilter == "activity" ? "bg-blue-600 text-white" : "bg-white text-gray-700 hover:bg-gray-50") border border-gray-300 rounded-r-lg transition-colors">Most active</a>
    </div>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">#</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Team</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Score</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Last game</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Count</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @{var rank = 1; }
            @foreach (var team in Model.Teams)
            {
                <tr class="hover:bg-gray-50 transition-colors">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        @(rank++)
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center space-x-4">
                            <partial name="_Player" model="team.Player1" />
                            <partial name="_Player" model="team.Player2" />
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <span class="text-green-600 font-medium">@team.Wins ↑</span>
                        <span class="text-red-600 font-medium ml-2">@team.Losses ↓</span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                        @team.LastGamePlayedOn.ToString("d")
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                        @team.GamesCount
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
